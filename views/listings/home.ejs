<% layout("/layout/boilerplate.ejs") %>

<div class="container text-center mt-5">
  <h1 class="display-4 fw-bold text-gradient">Welcome to Wanderlust 🌍</h1>
  <p class="lead mt-3">
    Discover breathtaking destinations, book your next adventure, and share your travel stories—all in one place.
  </p>

  <hr class="my-4">

  <div class="row justify-content-center mt-4">
    <div class="col-md-10">
      <div class="ratio ratio-16x9 shadow rounded overflow-hidden">
        <iframe src="https://www.youtube.com/embed/Scxs7L0vhZ4" title="Travel Inspiration" allowfullscreen></iframe>
      </div>
    </div>
  </div>

  <div class="mt-5">
    <a href="/listings" class="btn btn-primary btn-lg px-5 py-2 shadow-sm">
      🌐 Explore Listings
    </a>
    <a href="/share" class="btn btn-outline-secondary btn-lg px-5 py-2 ms-3">
      ✍️ Share Your Journey
    </a>
  </div>

  <div class="mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card bg-light border-0 shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Why Wanderlust?</h5>
            <p class="card-text">
              Whether you're a solo traveler, a family explorer, or a digital nomad, Wanderlust connects you to the world’s hidden gems and vibrant cultures.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <p class="text-muted mt-4">
    Built with ❤️ using Express, MongoDB, and EJS — Designed for dreamers.
  </p>
</div>